<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lenovo.angonaa.Activity.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical"
    android:weightSum="40"
    >

    <Button
        android:id="@+id/emergency_list"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/button_bg2"
        android:textSize="40dp"
        android:text="ইমারজেন্সি লিস্ট"
        android:layout_weight="10"
        android:drawableLeft="@drawable/ic_baseline_view_list_24px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/button_bg"
        android:textSize="40dp"
        android:text="টিপস"
        android:layout_weight="10"
        android:drawableLeft="@drawable/ic_baseline_report_24px"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/siren"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/button_bg2"
        android:textSize="40dp"
        android:text="অ্যালার্ম"
        android:layout_weight="10"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_baseline_notifications_active_24px"
        />
    <Button
        android:id="@+id/gps"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/button_bg"
        android:textSize="40dp"
        android:text="জিপিএস"
        android:layout_weight="10"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_baseline_location_searching_24px"
        />
</LinearLayout>
